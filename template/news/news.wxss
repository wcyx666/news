.dt-news-list-content {
  border-bottom: 1rpx solid #f5f5f5;
  overflow: hidden;
  padding: 20rpx 0;
  height: 150rpx;
  position: relative;
}
.dt-title {
  width: 67%;
  font-size: 16px;
  float: left;
  margin-right:20rpx;
}
.space {
  font-size: 14px;
  color: #999;
  position: absolute;
  bottom: 20rpx;
  width: 67%;
}
.local {
  float: right;
}
.dt-img {
  width: 30%;
  height: 150rpx;
  float: left;
  overflow: hidden;
}
.dt-img image{
  width: 100%;
  height: 150rpx;
}